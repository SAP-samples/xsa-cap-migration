FUNCTION "GETTABLESIZE" ()
	RETURNS table( RECORD_COUNT INTEGER, TABLE_SIZE VARCHAR(20), TABLE_SYNONYM VARCHAR(20))
	LANGUAGE SQLSCRIPT 
	SQL SECURITY INVOKER AS 
BEGIN 
RETURN
     SELECT  "RECORD_COUNT" as record_count, "TABLE_SIZE" as TABLE_SIZE, "TABLE_NAME" as TABLE_SYNONYM FROM "M_TABLES" where ("TABLE_NAME"='MD_ADDRESSES'or "TABLE_NAME"='MD_BUSINESSPARTNER' or "TABLE_NAME"='UTIL_CONSTANTS' or "TABLE_NAME"='MD_EMPLOYEES' or "TABLE_NAME"='UTIL_MESSAGES' or "TABLE_NAME"='MD_PRODUCTS' or "TABLE_NAME"='PO_HEADER' or "TABLE_NAME"='PO_ITEM' or "TABLE_NAME"='SO_HEADER' or "TABLE_NAME"='SO_ITEM' or "TABLE_NAME"='UTIL_TEXTS') ORDER BY "TABLE_NAME";
END;
